@model Product
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @if (Model.Name == "Single Origin Brazil")
            {
                <img class="card-img-top" src="~/lib/images/BrazilPhoto.jpg" alt="">
            }
            @if (Model.Name == "Single Origin Ethiopia")
            {
                <img class="card-img-top" src="~/lib/images/EthiopiaPhoto.jpg" alt="">
            }
            @if (Model.Name == "Single Origin Colombia")
            {
                <img class="card-img-top" src="~/lib/images/ColombiaPhoto.jpg" alt="">
            }
            @if (Model.Name == "Single Origin Vietnam")
            {
                <img class="card-img-top" src="~/lib/images/VietnamPhoto.jpg" alt="">
            }
            @if (Model.Name == "Single Origin Kona")
            {
                <img class="card-img-top" src="~/lib/images/KonaPhoto.jpg" alt="">
            }
            @if (Model.Name == "Colombia Blend")
            {
                <img class="card-img-top" src="~/lib/images/ColombiaXBrazilPhoto.jpg" alt="">
            }
            @if (Model.Name == "Ethiopia Blend")
            {
                <img class="card-img-top" src="~/lib/images/ColombiaXEthiopiaPhoto.jpg" alt="">
            }
            @if (Model.Name == "Guatemala Blend")
            {
                <img class="card-img-top" src="~/lib/images/ColombiaXGuatemalaPhoto.jpg" alt="">
            }
        </h4>
        <h4>
            @Model.Name
            @*<span class="badge badge-pill badge-primary" style="float:right">
            <small>@Model.Price.ToString("c")</small>
        </span>*@
        </h4>
    </div>
    <form id="@Model.ProductID" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="ProductID" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text-center col-lg-3 col-md-6 mb-4">
            @Model.Description
            <div>
                <span class="badge badge-pill badge-primary mb-sm-3">
                    <small>@Model.Price.ToString("c")</small>
                </span>
            </div>
            <div>
                <button type="submit"
                    class="btn btn-success btn-sm pull-right">
                    Add To Cart
                </button>
            </div>
        </span>
    </form>
</div>
